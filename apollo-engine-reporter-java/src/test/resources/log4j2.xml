<Configuration>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="stdout"/>
        </Root>
    </Loggers>
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %c{1.}: %p %m%n"/>
        </Console>
    </Appenders>
</Configuration>
